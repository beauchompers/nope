# .env.example - Required environment variables for NOPE

# Database
DB_USER=nope
DB_PASSWORD=<generate-secure-password>

# Security (REQUIRED - app will not start without these)
SECRET_KEY=<generate-with: openssl rand -hex 32>
API_KEY_ENCRYPTION_KEY=<generate-with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())">

# Default admin account (REQUIRED - must meet password complexity: 12+ chars, upper, lower, digit)
DEFAULT_ADMIN_USER=admin
DEFAULT_ADMIN_PASSWORD=<your-secure-admin-password>

# EDL basic auth (REQUIRED - must meet password complexity: 12+ chars, upper, lower, digit)
DEFAULT_EDL_USER=edl
DEFAULT_EDL_PASSWORD=<your-secure-edl-password>
